<!DOCTYPE html>
<html>
  <head>
    <title>Bookmark Manager</title>
  </head>

  <body>
    <% if current_user %>
      Welcome, <%= current_user.email %>
      <form action="/sessions" method='post'>
        <input type="hidden" name='_method' value='delete' />
        <input type="submit" value="Sign out" />
      </form>
    <% end %>
    <%= erb :flash %>
    <%= erb :errors %>
    <%= yield %>
  </body>
</html>